{#
An individual card for this-week-in-open-source updates

Configuration Options:
post: A twios post object

{{ twiosCard(post) }}
#}
{%- macro twiosCard(post) -%}
  <li class="card__grid-element">
    <a href="{{ post.url }}" class="card__link">
      <h3 class="screenreader">{{ post.data.title }}</h3>
    </a>
    <div class="card__logo-wrapper">
      <p class="small">{{ post.date | monthDayYear }}</p>
    </div>

    <div class="card__content">
      <p class="h4 mb-015" aria-hidden="true">{{ post.data.title }}</p>
      <div class="card__link-wrapper">
        <p class="small">{{ post.data.number }}</p>
        <span class="card__link-arrow">{% include 'svg/arrow.njk' %}</span>
      </div>
    </div>
  </li>
{%- endmacro -%}
