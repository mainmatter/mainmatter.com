{%- macro featuredServices(services, content) -%}
  <section class="featured-services container container--lg">
  <h2 class="featured-services__title h6">{{ content.title }}</h2>
    <div class="featured-services__list-wrapper">
      <h3 class="h2">{{ content.subtitle }}</h3>
      <ul class="featured-services__list">
        {%- for service in services %}
          <li class="featured-services__list-item">
            {% if service.linkUrl %}
            <a href="{{ service.linkUrl }}" class="featured-services__link h4">
              {% include 'svg/arrow.njk' %}
              <span class="featured-services__link-text">{{ service.heading }}</span>
            </a>
            {% else %}
            <div class="featured-services__link h4">
              {% include 'svg/arrow.njk' %}
              <span class="featured-services__link-text">{{ service.heading }}</span>
            </div>
            {% endif %}
            {% if service.text%}
              <p class="featured-services__link-description">{{ service.text }}</p>
            {% endif %}
          </li>
        {% endfor %}
      </ul>
    </div>
    <p class="featured-services__text">{{ content.text }}</p>
  </section>
{% endmacro %}
