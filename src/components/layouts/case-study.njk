---
layout: base
---

{% from "split-hero.njk" import splitHero %}
{% from "color-hero.njk" import colorHero %}
{% from 'case-study-card.njk' import caseStudyCard %}
{%- block content -%}
<div class="">
  <div class="color-hero color-hero--{{ hero.color }}">
    <div class="color-hero__image-wrapper">
      {% if hero.image %}
        {% image hero.image, hero.imageAlt, '100vw', 'eager', 'color-hero__image', [760, 1440, 1920] %}
      {% endif %}
    </div>
    <div class="color-hero__filter"></div>
    <div class="color-hero__overlay"></div>
    <div class="color-hero__container container container--lg color-hero__container--{{ hero.textPosition }}">
      <div class="color-hero__main">
        <div class="color-hero__client-logo">
          {% set imagePath %}/assets/images/logos/{{ company | slug }}.svg{% endset %}
          <img src="{{ imagePath }}" alt="{{ company }}"></div>
          <h1 class="color-hero__title color-hero__title--full text-animation">{{ displayTitle | safe }}</h1>
          <p class="color-hero__client-tags h4">{{ hero.tags }}</p>
        </div>
      </div>
    </div>
    <article class="case-study">
      <div class="container container--lg">
        {{ content | safe }}
      </div>
    </article>
    {% set postsFromCollection = collections.caseStudiesFeatured | getMorePosts(page) %}
    {% if postsFromCollection %}
      <section class="featured-case-studies">
        <div class="container container--xl">
          <h2 class="featured-case-studies__heading h5">Discover more case studies</h2>
          <ul class="featured-case-studies__list">
            {% for post in postsFromCollection %}
              {% if loop.index0 < 3 %}
                {{ caseStudyCard(post.fileSlug) }}
              {% endif %}
            {% endfor %}
          </ul>
        </div>
      </section>
    {% endif %}
  </div>
  {% include 'content/hero-grow-with-us.njk' %}
{%- endblock -%}