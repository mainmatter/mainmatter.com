{% from "btn-primary.njk" import btnPrimary %}

{% macro serviceCards(id, title, cards) %}
  <section class="service-cards" id="{{ id }}">
    <div class="service-cards__container container container--xl">
      {% if title %}
        <h1 class="service-cards__title">{{ title }}</h1>
      {% endif %}
      <p class="service-cards__intro mt-25 mb-5">{{ intro | safe }}</p>
      <div class="cards__grid pb-10">
        {% for card in cards %}
          <div class="service-cards__grid-element card__grid-element">
              <h3 class="screenreader">{{ card.title }}</h3>
            <div class="card__content">
              {% if card.title %}
                <h4 class="mb-2">{{ card.title }}</h4>
              {% endif %}
              {% if card.text %}
                <p class="mb-2">{{ card.text }}</p>
              {% endif %}
              {% if card.link %}
                {%
                  set link = {
                  "label": card.label,
                  "url": card.link
                  }
                %}
                {{ btnPrimary( link, 'aqua', 'nav__cta service-cards__btn' ) }}
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </section>
{% endmacro %}
