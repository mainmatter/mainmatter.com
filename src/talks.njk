{% from "color-hero-energy.njk" import colorHero %}
{% from "talk-banner.njk" import talkBanner %}
{% from "talk-card.njk" import talkCard %}
{% from "cta-banner.njk" import ctaBanner %}

{% set 'content' = {
"title": "Guidance from our team of trusted industry experts"
} %}
{{ colorHero('black', content) }}

<div class="talks section">
  <div class="section__introduction container container--xl">
    <h2 class="section__title h5">Browse our past talks</h2>
  </div>
  <div class="talks__container">
    <ol class="talks__list">
      {% for appearance in collections.appearances %}
        {% if loop.index === 1 %}
          <li class="talks__item talks__item--full-width">
            {{ talkBanner(appearance, "black") }}
          </li>
        {% else %}
          <li class="talks__item"{% if loop.index === 11 %} id="more-talks"{% endif %}>
            {{ talkCard(appearance, "black") }}
          </li>
        {% endif %}
      {% endfor %}
    </ol>
  </div>
</div>
{% set 'content' = {
  "title": "Grow your business with us",
  "text": "Our experts are ready to guide you through your next big move. Let us know how we can help.",
  "linkUrl": "/contact",
  "linkText": "Get in touch"
} %}
{{ ctaBanner('aqua', 'full', content) }}
