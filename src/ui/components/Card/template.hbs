<figure>
  {{#if @label}}
    <p class="typography.small">
      {{@label}}
    </p>
  {{/if}}
  {{#if @src}}
    <div class="fluid-image image">
      <img class="fluid-image.image-cover" src={{@src}} alt="{{@alt}}" />
    </div>
  {{/if}}
  <figcaption class="caption">
    <h3 class="typography.h4 headline">
      {{@title}}
    </h3>
    {{yield}}
  </figcaption>
</figure>