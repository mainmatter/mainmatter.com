<div>
  <a href="{{@path}}" data-internal block:class="main-link">
    <div block:class="info">
      {{#each this.leads key="id" as |leadImage|}}
        <img src="{{leadImage}}" block:class="image" width="100" height="100" alt="link to {{@title}}" />
      {{/each}}
      <p typography:class="small" block:class="label">
        {{#each this.labelLines key="id" as |line|}}
          <span block:class="label-line">
            {{line}}
          </span>
        {{/each}}
      </p>
    </div>
    <div block:class="content">
      <img src="{{@tag}}" block:class="tag" width="100" height="100" alt="" />
      <h3 typography:class="h4" block:class="title">
        {{@title}}
      </h3>
      <p typography:class="p" block:class="p">
        {{@description}}
      </p>
    </div>
  </a>
  <div block:class="bottom-link">
    <div block:class="bottom-link-content">
      <ArrowLink @href={{@path}} @lead={{false}} @leftAlign={{true}}>
        See workshop
      </ArrowLink>
    </div>
  </div>
</div>