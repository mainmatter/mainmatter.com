<div style={{this.shapeStyle}} state:hasImage={{@image}}>
  <div class="bottom">
    <svg
      class="bottom-svg"
      width="1880"
      height="980"
      viewBox="0 0 1880 980"
      xmlns="http://www.w3.org/2000/svg"
      xmlns:xlink="http://www.w3.org/1999/xlink"
      style={{this.backgroundStyle}}
    >
      <defs>
        <path
          id={{this.shapeId}}
          d="m840.577137 0 862.961153 498.230855-231.96152 401.769145h-512.153907l-862.9611537-498.230855 231.9615247-401.769145z"
        ></path>
        <mask id={{this.maskId}}>
          <rect x="0" y="0" width="100%" height="100%" fill="white"></rect>
          <use x="10" y="10" xlink:href="#{{this.shapeId}}" fill="black"></use>
        </mask>
      </defs>
      <rect fill="#fff" x="0" y="0" width="100%" height="100%" mask="url(#{{this.maskId}})"></rect>
    </svg>
    {{#if @src}}
      <img class="img" src={{@src}} alt="{{@srcAlt}}" width={{@width}} height={{@height}} />
    {{/if}}
  </div>
  <svg
    class="top"
    width="1800"
    height="900"
    viewBox="0 0 1800 900"
    xmlns="http://www.w3.org/2000/svg"
    xmlns:xlink="http://www.w3.org/1999/xlink"
  >
    <use fill-rule="evenodd" xlink:href="#{{this.shapeId}}"></use>
  </svg>

  <div class="content">
    {{yield}}
  </div>
</div>