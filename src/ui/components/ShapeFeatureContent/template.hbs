<div>
  {{#if @srcset}}
    <figure block:class="container">
      <div block:class="img-wrapper">
        <img block:class="img" srcset={{@srcset}} sizes={{@sizes}} alt="{{@srcAlt}}" />
      </div>
      <figcaption block:class="content">
        {{yield}}
      </figcaption>
    </figure>
  {{else}}
    <div block:class="content">
      {{yield}}
    </div>
  {{/if}}
</div>