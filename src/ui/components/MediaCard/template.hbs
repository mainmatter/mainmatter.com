<div block:shallow={{@shallow}}>
  <img src={{@image}} block:class="image" />
  {{#if @duration}}
    <span block:class="duration" typography:class="small">
      {{@duration}}
    </span>
  {{/if}}
  <p typography:class="small">
    {{@label}}
  </p>
  <h3 typography:class="h4" block:class="h4">
    {{@title}}
  </h3>
  <p typography:class="p">
    {{yield}}
  </p>
</div>