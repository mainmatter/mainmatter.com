<section>
  {{#if @title}}
    <h2>
      {{@title}}
    </h2>
  {{/if}}
  <div grid:scope>
    {{#each this.clients key="id" as |c|}}
      <figure grid:class="item">
        <div grid:class="figure">
          <img grid:class="image" src={{c.src}} alt="{{c.name}}" />
        </div>
        <figcaption>
          <p grid:class="text">
            {{c.text}}
          </p>
        </figcaption>
      </figure>
    {{/each}}
  </div>
</section>