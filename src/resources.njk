{% from "split-hero.njk" import splitHero %}
{% from "video-card.njk" import videoCard %}
{% from "workshop-card.njk" import workshopCard %}

{% set 'content' = {
  "title": "Tap into <em>practical</em> insight from industry experts",
  "text": "Your team can tap into its full potential by sourcing best practices from leaders in the industry. Mainmatter's experts would love to accelerate your growth by sharing their hard-won insights into sustainable development.",
  "image": "/assets/images/photos/0005.jpg",
  "alt": "Woman looking at a laptop",
  "loading": "eager"
} %}
{{ splitHero('left', 'yellow', content) }}

<section class="section">
  <div class="container container--lg">
    <div class="section__introduction container--xs">
      <h2 class="section__title">This is what success looks like</h2>
      <p>Our interview series goes behind the scenes to uncover the path to successful product development from an insider's perspective.</p>
    </div>
  </div>
  <ul class="video-cards video-cards--overflow">
    {% set videos = collections.videos | filterByAttribute('kind', 'built-to-last') %}
    {%- for video in videos -%}
      {%- if video.data.kind == 'built-to-last' -%}
        <li class="video-card__flow-item">
          {{ videoCard(video) }}
        </li>
      {%- endif -%}
    {%- endfor -%}
  </ul>
</section>

{% set talk = '2020-12-10-the-three-pillars-of-successful-digital-product-development' | findBySlug %}
{% set 'content' = {
  "title": talk.data.title,
  "text": talk.data.teaser,
  "image": talk.data.image,
  "alt": talk.data.imageAlt,
  "loading": "lazy",
  "tags": talk.data.tags,
  "linkUrl": talk.url,
  "linkText": "Find out more"
} %}
{{ splitHero('left', 'blue', content) }}

<section class="section container container--lg">
  <div class="section__introduction container--xs">
    <h2 class="section__title">Workshops</h2>
    <p>We teach teams like yours how to build sustainable products that work well today and keep working well tomorrow.</p>
  </div>
  <ul class="workshop-cards">
    {% set workshops = collections.workshops %}
    {%- for workshop in workshops -%}
      {{ workshopCard(workshop) }}
    {%- endfor -%}
  </ul>
</section>

