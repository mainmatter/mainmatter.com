{
  "name": "simplabs",
  "version": "0.0.0",
  "description": "A brand new Glimmer app.",
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "scripts": {
    "build": "PRERENDER=1 ember build -prod && node scripts/prerender.js",
    "crawl": "node scripts/crawl.js",
    "start": "LOCAL_URL=\"http://localhost:4200\" ember server",
    "start-dev": "LOCAL_URL=\"http://localhost:4200\" LIMIT_CONTENT_ARCHIVE=true ember server",
    "test": "ember test",
    "lint:ts": "tslint -c tslint.json 'src/**/*.ts' -t codeFrame",
    "lint:js": "eslint . --cache",
    "lint:css": "prettier --check '{src,lib}/**/*.css'",
    "lint:hbs": "prettier --check --parser glimmer '**/*.hbs'",
    "lint:md": "prettier --check '**/*md'",
    "lint": "yarn run lint:ts; yarn run lint:js; yarn run lint:hbs; yarn run lint:css; yarn run lint:md",
    "format:ts": "tslint --fix -c tslint.json 'src/**/*.ts'",
    "format:js": "eslint --fix . --cache",
    "format:css": "prettier '{src,lib}/**/*.css' --write",
    "format:hbs": "prettier --write --parser glimmer '**/*.hbs'",
    "format:md": "prettier --write '**/*md'",
    "format": "yarn run format:ts; yarn run format:js; yarn run format:hbs; yarn run format:css; yarn run format:md",
    "percy": "percy exec -- node scripts/percy.js"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@css-blocks/ember-cli": "^1.5.0",
    "@glimmer/application": "^0.13.0",
    "@glimmer/application-pipeline": "^0.15.0",
    "@glimmer/blueprint": "~1.0.2",
    "@glimmer/component": "^1.0.3",
    "@glimmer/inline-precompile": "^1.0.0",
    "@glimmer/resolver": "^0.4.3",
    "@glimmer/ssr": "^0.13.0",
    "@glimmer/test-helpers": "^0.31.1",
    "@lhci/cli": "^0.6.1",
    "@percy/script": "^1.1.0",
    "@types/navigo": "^7.0.1",
    "@types/qunit": "^2.11.1",
    "broccoli-asset-rev": "^3.0.0",
    "broccoli-caching-writer": "^3.0.3",
    "broccoli-clean-css": "^2.0.1",
    "broccoli-debug": "^0.6.5",
    "broccoli-file-creator": "^2.1.1",
    "broccoli-funnel": "^2.0.1",
    "broccoli-merge-trees": "^4.1.0",
    "broccoli-stew": "^3.0.0",
    "broccoli-string-replace": "^0.1.2",
    "broccoli-typescript-compiler": "^7.0.0",
    "broken-link-checker": "^0.7.8",
    "clean-css": "^4.2.3",
    "colors": "^1.4.0",
    "dateformat": "^4.3.1",
    "ember-cli": "^3.23.0",
    "ember-cli-dependency-checker": "^3.2.0",
    "ember-cli-inject-live-reload": "^2.0.2",
    "ember-cli-tslint": "^0.1.3",
    "ember-cli-uglify": "^3.0.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-config-simplabs": "^0.4.0",
    "eslint-plugin-prettier": "^3.3.0",
    "express": "^4.17.1",
    "front-matter": "^4.0.2",
    "fs-extra": "^9.0.1",
    "glob": "^7.1.3",
    "handlebars": "^4.7.6",
    "highlight.js": "^10.4.1",
    "html-entities": "^1.3.3",
    "jsdom": "^16.4.0",
    "lodash": "^4.17.20",
    "marked": "^2.0.0",
    "morgan": "^1.10.0",
    "navigo": "^7.1.2",
    "percy": "^0.28.5",
    "pretender": "^3.4.3",
    "prettier": "^2.2.1",
    "puppeteer": "^5.5.0",
    "qunitjs": "^2.3.3",
    "rollup": "^2.35.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^9.2.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-uglify": "^6.0.4",
    "rollup-plugin-virtual": "^1.0.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "~4.1.2"
  },
  "engines": {
    "node": ">= 4.0"
  },
  "private": true,
  "ember-addon": {
    "paths": [
      "lib/analytics",
      "lib/generate-appearances-archive",
      "lib/generate-blog",
      "lib/generate-calendar",
      "lib/global-css",
      "lib/head-data",
      "lib/pwa",
      "lib/routes",
      "lib/sentry",
      "lib/service-workers"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "overrides": [
      {
        "files": "*.hbs",
        "options": {
          "singleQuote": false
        }
      },
      {
        "files": "*.md",
        "options": {
          "printWidth": 80,
          "proseWrap": "always"
        }
      }
    ]
  },
  "dependencies": {},
  "volta": {
    "node": "10.22.0",
    "yarn": "1.22.4"
  }
}
