<ul>
  {{#each posts}}
    <li class="post">
      <h4 class="title">
        <a href="{{path}}" data-internal>
          {{title}}
        </a>
      </h4>
      <div class="media">
        <img class="image" src="/assets/images/authors/{{author.twitter}}.jpg" alt="" />
        <p>
          <span class="author">
            {{author.name}}
          </span>
          <span class="date">
            {{date}}
          </span>
        </p>
      </div>
      <ArrowLink @href="{{path}}">
        Read Post
      </ArrowLink>
    </li>
  {{/each}}
</ul>