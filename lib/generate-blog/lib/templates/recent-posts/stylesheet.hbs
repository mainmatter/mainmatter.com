@block typography from "../../styles/blocks/typography.block.css";
@block container from "../../styles/blocks/container.block.css";
@block offset from "../../styles/blocks/offset.block.css";

:scope {
  block-name:
{{componentName}}
;
}

.post {
  margin: 0;
  list-style: none;
}

.post + .post {
  margin-top: var(--o-4);
}

.title {
  margin-bottom: var(--o-1);
}

.media {
  position: relative;
  padding-left: 8rem;
}

.image {
  display: block;
  position: absolute;
  left: 0;
  width: 6rem;
  height: 6rem;
  border-radius: 3rem;
  overflow: hidden;
}

.author,
.date {
  display: block;
  line-height: 3rem;
}