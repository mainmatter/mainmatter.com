:scope {
  block-name:
{{componentName}}
;
}

.post {
  margin: 0;
  list-style: none;
}

.post + .post {
  margin-top: 8rem;
}

.title {
  margin-bottom: 2rem;
}

.media {
  position: relative;
  padding-left: 8rem;
}

.image {
  display: block;
  position: absolute;
  left: 0;
  width: 6rem;
  height: 6rem;
  border-radius: 3rem;
  overflow: hidden;
}

.author,
.date {
  display: block;
  line-height: 3rem;
}