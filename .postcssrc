{
  "plugins": {
    "postcss-preset-env": {
      "stage": 0
    },
    "cssnano": {
      "preset": [
        "advanced",
        {
          "discardComments": {
            "removeAll": true
          },
          "reduceIdents": false
        }
      ]
    },
    "postcss-reporter": {
      "clearReportedMessages": true
    }
  }
}
